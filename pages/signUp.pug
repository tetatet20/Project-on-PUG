extends ../layout/authorization.pug

block title
  title  Регистрация

block styles
    style
      include ../styles/pages/dist/signUp.css

block scripts 
  script(src='../scripts/signUp.js')


block content
  p.header-register Регистрация аккаунта
  .name
    label
      input.account-registration-input(type="email" placeholder="Имя") 
    label
      input.account-registration-input(type="text" placeholder="Фамилия") 
  .gender
    input.input-radio(type="radio" name="gender" id="men")
    label.men(for="men") Мужчина
    input.input-radio(type="radio" name="gender" id="woomen")
    label(for="woomen") Женщина
  .date-of-birth
    label.header-label  Дата рождения
      input.account-registration-input.date-input(type="date" placeholder="ДД.ММ.ГГГГ") 
  .email-password 
    label.header-label Данные для входа в сервис
      input.account-registration-input(type="text" placeholder="Email") 
      input.account-registration-input(type="text" placeholder="Пароль") 
  .special-offer
    .container-radio 
      .radio
    p Получать спецпредложения
  .register-container
    a(href="#")
      button.register-button Зарегистрироваться
  .come-in
    .account-available Уже есть аккаунт на Toxin
    .come-in-container
      a(href="#")
        button.to-come-in-button Войти