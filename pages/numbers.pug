extends ../layout/default.pug

block styles
    style
      include ../styles/pages/dist/numbers.css

block scripts 
    script(src='../scripts/numbers.js')
    script(src="../../components/checkbox/checkbox.js")

block content
    include ../components/checkbox/checkbox.pug
    .conteiner
        .button-menu
            label.title-text.arrow-date-guests Даты пребывания в отеле
                input.date-guests.date-stay(type="text" value="19 авг - 23 авг" readonly)
            label.title-text.arrow-date-guests Гости
                input.date-guests.number-guests(type="text" value="3 гостя, 1 младенец" readonly)

                .filtres 
                    .filtres_item.filtres_price 
                        h3.filtres_price_title Цена
                        input.slider(type="range" min="0" max="1000000" step="100")
                        .filtres_price_slider 
                        .filtres_price_inputs
                            label.filtres_price_label(for="") 
                                input.filtres_price_input(type="number"  min="0" value="0")
                                span р
                            label.filtres_price_label(for="") 
                                input.filtres_price_input(type="number"  min="0" value="5000")
                                span р
            p.price-range Стоимость за сутки пребывания в номере
            .checkbox
                p.title-text Правила дома
                    +checkbox('Можно курить')
                    +checkbox('Можно с питомцами')
                    .checkbox-container.big-margin
                        .checkbox-passive#checkbox_3
                        p.one-may Можно пригласить гостей<br>(до 10 человек)
            .availability 
                p.title-text Доступность
                .checkbox-container
                    .availability-checkbox
                        .checkbox-passive#checkbox_4
                        p.caption-checkbox Широкий коридор 
                        p.explanation Ширина коридоров в номере<br>не менее 91 см
                .checkbox-container.big-margin
                    .availability-checkbox
                        .checkbox-passive#checkbox_5 
                        p.caption-checkbox Помощник для инвалидов 
                        p.explanation На 1 этаже вас встретит специалист<br>и проводит до номера.
            label.arrow-comfort.big-margin.title-text Удобства номера
                input.date-guests.big-margin.roma(type="text" value="2 спальни, 2 кровати..." )
                .dropdown-menu-comfort
                    .facilities Спальни
                        .dropdown-buttons
                            span.round-button.adults-minus(data-button="adult-minus") -
                            span.adults-number 0
                            span.round-button.adults-plus(data-button="adult-plus") +
                    .facilities Кровати
                        .dropdown-buttons  
                            span.round-button.children-minus(data-button="childrens-minus") -
                            span.children-number 0
                            span.round-button.children-plus(data-button="childrens-plus") +
                    .facilities Ванные комнаты
                        .dropdown-buttons
                            span.round-button.babies-minus(data-button="babies-minus") -
                            span.babies-number 0
                            span.round-button.babies-plus(data-button="babies-plus") +
            .more-comfort.title-text Дополнительные удобства
            .dropdown-checkbox 
                +checkbox('Завтрак')
                +checkbox('Письменный стол')
                +checkbox('Стул для кормления')
                +checkbox('Кроватка')
                +checkbox('Телевизор')
                +checkbox('Шампунь')
        .selection-numbers